<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.github.nikartm.button.FitButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:gravity="center"
            app:fb_text="Info"
            app:fb_rippleColor="@color/info_color"
            app:fb_borderColor="@color/info_color"
            app:fb_borderWidth="2dp"
            android:onClick="info"/>

        <com.github.nikartm.button.FitButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:gravity="center"
            app:fb_text="Question"
            app:fb_rippleColor="@color/question_color"
            app:fb_borderColor="@color/question_color"
            app:fb_borderWidth="2dp"
            android:onClick="question"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.github.nikartm.button.FitButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:gravity="center"
            app:fb_text="Success"
            app:fb_rippleColor="@color/green"
            app:fb_borderColor="@color/green"
            app:fb_borderWidth="2dp"
            android:onClick="success"/>

        <com.github.nikartm.button.FitButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:gravity="center"
            app:fb_text="Failure"
            app:fb_rippleColor="@color/red"
            app:fb_borderColor="@color/red"
            app:fb_borderWidth="2dp"
            android:onClick="failure"/>

    </LinearLayout>



</LinearLayout>